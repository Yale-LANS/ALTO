#ifndef P4P_ERRCODE_H
#define P4P_ERRCODE_H

namespace p4p {

/**
 * Invalid PID specified as an argument.
 */
const int ERR_UNKNOWN_PID = -1;

/**
 * Invalid argument
 */
const int ERR_INVALID_ARG = -2;

/**
 * Connection error (e.g., connection refused)
 */
const int ERR_CONNECTION_FAILURE = -3;

/**
 * Protocol error (e.g., parsing failed)
 */
const int ERR_PROTOCOL_FAILURE = -4;

/**
 * Failed to open file (e.g., file not found or permission denied)
 */
const int ERR_FILE_OPEN_FAILED = -5;

/**
 * File read failed (e.g., system error while reading)
 */
const int ERR_FILE_READ_FAILED = -6;

/**
 * Internal error
 */
const int ERR_INTERNAL_ERROR = -7;

};

#endif
